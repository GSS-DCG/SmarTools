<Window x:Class="SmarTools.View.Status"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmarTools.View"
        mc:Ignorable="d"
        Title="Status" Height="120" Width="250"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" 
        ResizeMode="NoResize" 
        ShowInTaskbar="False" 
        Topmost="True"
        Background="Transparent"
        AllowsTransparency="True">

    <Window.Resources>
        <Storyboard x:Key="SpinnerAnimation" RepeatBehavior="Forever">
            <DoubleAnimation
                Storyboard.TargetName="SpinnerPath"
                Storyboard.TargetProperty="(Path.RenderTransform).(RotateTransform.Angle)"
                From="0" To="360"
                Duration="0:0:1"
                RepeatBehavior="Forever"/>
        </Storyboard>
    </Window.Resources>
    <Border CornerRadius="12">
        <Border.Background>
            <ImageBrush ImageSource="https://www.gsolarsteel.com/wp-content/uploads/2024/11/v2-galeria-2-scaled-1-2048x1088.webp"
                Stretch="UniformToFill"/>
        </Border.Background>
        <Border CornerRadius="10"
        BorderThickness="2"
        Opacity="0.90">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="{StaticResource windowBorderColor1}" Offset="0"></GradientStop>
                    <GradientStop Color="{StaticResource windowBorderColor2}" Offset="0.75"></GradientStop>
                    <GradientStop Color="{StaticResource windowBorderColor3}" Offset="1"></GradientStop>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="{StaticResource primaryBackColor1}" Offset="0"></GradientStop>
                    <GradientStop Color="{StaticResource primaryBackColor2}" Offset="0.75"></GradientStop>
                </LinearGradientBrush>
            </Border.Background>
            <Grid x:Name="RootGrid">
                <TextBlock Text="Calculando, por favor espere..."
                   HorizontalAlignment="Center" Margin="0,30,0,0"
                   FontSize="14" FontWeight="Bold" Foreground="White" FontFamily="Neo Tech Std"/>
                <Canvas Width="50" Height="50" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10">
                    <Path x:Name="SpinnerPath"
                          StrokeThickness="4"
                          RenderTransformOrigin="0.5,0.5"
                          Canvas.Left="0" Canvas.Top="0"
                          Data="M 25,5 A 20,20 0 1 1 24.9,5">
                        <Path.Stroke>
                            <RadialGradientBrush GradientOrigin="0.2,0.2" Center="0.5,0.5" RadiusX="1" RadiusY="1">
                                <GradientStop Color="White" Offset="0"/>
                                <GradientStop Color="#00FFFFFF" Offset="1"/>
                            </RadialGradientBrush>
                        </Path.Stroke>
                        <Path.RenderTransform>
                            <RotateTransform/>
                        </Path.RenderTransform>
                        <Path.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard Storyboard="{StaticResource SpinnerAnimation}"/>
                            </EventTrigger>
                        </Path.Triggers>
                    </Path>
                </Canvas>
            </Grid>
        </Border>
    </Border>
</Window>
