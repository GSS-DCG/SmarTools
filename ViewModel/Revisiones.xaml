<UserControl x:Class="SmarTools.ViewModel.Revisiones"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmarTools.ViewModel"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d" 
             d:DesignHeight="571" d:DesignWidth="996">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4">
            <TextBlock Text="Tablas y parámetros de cálculo"  Foreground="White" FontFamily="Neo Tech Std" FontWeight="Bold" FontSize="20" VerticalAlignment="Center" Margin="20,0,0,0"/>
        </Border>
        <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4">
            <TextBlock Text="Uniones 1VR5"  Foreground="White" FontFamily="Neo Tech Std" FontWeight="Light" FontSize="16" VerticalAlignment="Center" Margin="40,0,0,0"/>
        </Border>
        <Border Grid.Row="1" Grid.Column="1">
            <ComboBox x:Name="Revision1V_Box" ItemsSource="{Binding Revisions1V}" SelectedItem="{Binding Revision1VSeleccionada}" Width="50" 
                      HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" 
                      FontFamily="Neo Tech Std" Foreground="{StaticResource Blue02}" FontSize="16"
                      Margin="0,3,0,3"/>
        </Border>
        <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4">
            <TextBlock Text="Uniones 2VR4"  Foreground="White" FontFamily="Neo Tech Std" FontWeight="Light" FontSize="16" VerticalAlignment="Center" Margin="40,0,0,0"/>
        </Border>
        <Border Grid.Row="2" Grid.Column="1">
            <ComboBox x:Name="Revision2V_Box" ItemsSource="{Binding Revisions2V}" SelectedItem="{Binding Revision2VSeleccionada}" Width="50" 
                      HorizontalAlignment="Left"  HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                      FontFamily="Neo Tech Std" Foreground="{StaticResource Blue02}"  FontSize="16"
                      Margin="0,3,0,3"/>
        </Border>
        <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="4">
            <TextBlock Text="Coeficientes"  Foreground="White" FontFamily="Neo Tech Std" FontWeight="Light" FontSize="16" VerticalAlignment="Center" Margin="40,0,0,0"/>
        </Border>
        <Border Grid.Row="3" Grid.Column="1">
            <ComboBox x:Name="RevisionCoef_Box"  ItemsSource="{Binding RevisionsCoeficientes}" SelectedItem="{Binding RevisionCoeficientesSeleccionada}" Width="50" 
                      HorizontalAlignment="Left"  HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                      FontFamily="Neo Tech Std" Foreground="{StaticResource Blue02}"  FontSize="16"
                      Margin="0,3,0,3"/>
        </Border>
    </Grid>
</UserControl>
