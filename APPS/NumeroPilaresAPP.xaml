<Window x:Class="SmarTools.APPS.NumeroPilaresAPP"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmarTools.APPS"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        Title="NumeroPilaresAPP" 
        Height="300" Width="600">

    <Border CornerRadius="12">
        <Border.Background>
            <ImageBrush ImageSource="https://www.gsolarsteel.com/wp-content/uploads/2024/08/v2-galeria-4-scaled-1-2048x1394.jpg"
            Stretch="UniformToFill"/>
        </Border.Background>

        <Border CornerRadius="10"
            BorderThickness="2"
            Opacity="0.95">

            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="{StaticResource windowBorderColor1}" Offset="0"></GradientStop>
                    <GradientStop Color="{StaticResource windowBorderColor2}" Offset="0.5"></GradientStop>
                    <GradientStop Color="{StaticResource windowBorderColor3}" Offset="1"></GradientStop>
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Grid>
                <!--Navigation Menu-->
                <Border CornerRadius="10,0,0,10"
                    Grid.Column="0">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="{StaticResource primaryBackColor1}" Offset="0"></GradientStop>
                            <GradientStop Color="{StaticResource primaryBackColor2}" Offset="0.75"></GradientStop>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>

                <TextBlock x:Name="VersionInfoText" 
               VerticalAlignment="Bottom" 
               Text="Error" 
               Foreground="White" 
               FontFamily="Neo Tech Std" 
               FontSize="15" Margin="25,0,0,10"></TextBlock>

                <!--Main Section-->
                <Border CornerRadius="0,10,10,0"
                    Grid.Column="1">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="1,1" EndPoint="0,0">
                            <GradientStop Color="{StaticResource primaryBackColor1}" Offset="0"></GradientStop>
                            <GradientStop Color="{StaticResource primaryBackColor2}" Offset="0.75"></GradientStop>
                        </LinearGradientBrush>
                    </Border.Background>

                    <Grid>
                        <Grid.RowDefinitions>
                            <!--Control Bar-->
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="270"/>
                            <!--Content Section-->
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Número de Pilares 1P-R5"
                               VerticalAlignment="Center"
                               Foreground="White"
                               FontFamily="Neo Tech Std"
                               Margin="10,0,0,0"
                               FontSize="13.5"/>
                        <!--Control Bar-->
                        <StackPanel x:Name="pnlControlBar"
                                Grid.Row="0"
                                Orientation="Horizontal"
                                FlowDirection="RightToLeft"
                                Background="Transparent"
                                Margin="0,0,5,0"
                                MouseLeftButtonDown="pnlcControlBar_MouseLeftButtonDown"
                                MouseEnter="pnlControlBar_MouseEnter">

                            <Button x:Name="btnClose"
                                Style="{StaticResource ControlButton}"
                                Tag="{StaticResource General4}"
                                Click="btnClose_Click">
                                <fa:IconImage Icon="Xmark" Style="{StaticResource ControlButtonIcon}"></fa:IconImage>
                            </Button>

                            <Button x:Name="btnMaximize"
                                Style="{StaticResource ControlButton}"
                                Tag="{StaticResource General4}"
                                Click="btnMaximize_Click">
                                <fa:IconImage Icon="WindowMaximize" Style="{StaticResource ControlButtonIcon}"></fa:IconImage>
                            </Button>

                            <Button x:Name="btnMinimize"
                                Style="{StaticResource ControlButton}"
                                Tag="{StaticResource General4}"
                                Click="btnMinimize_Click">
                                <fa:IconImage Icon="WindowMinimize" Style="{StaticResource ControlButtonIcon}"></fa:IconImage>
                            </Button>
                        </StackPanel>
                        <StackPanel x:Name="Ventana"
                                Grid.Row="1"
                                Orientation="Vertical"
                                Margin="10,10,10,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="25"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="ES_MA"
                                       Grid.Row="0"
                                       FontFamily="Neo Tech Std"
                                       FontWeight="Medium"
                                       Foreground="White"
                                       Margin="5"/>
                                <TextBlock Text="Seleccione el archivo ES_MA para el que desea calcular el número de pilares"
                                       Grid.Row="1"
                                       FontFamily="Neo Tech Std"
                                       FontWeight="Normal"
                                       Foreground="White"
                                       Margin="5"/>
                                <TextBox x:Name="RutaESMA"
                                     Grid.Row="2"
                                     Margin="2"
                                     Foreground="{StaticResource Blue02}"
                                     FontWeight="Normal"
                                     HorizontalContentAlignment="Center"/>
                                <Button x:Name="btnExaminarESMA"
                                    Grid.Row="1"
                                    BorderThickness="0"
                                    Content="Examinar"
                                    Foreground="White"
                                    FontSize="16"
                                    FontFamily="Neo Tech Std"
                                    Cursor="Hand"
                                    Grid.Column="1"
                                    HorizontalAlignment="Right"
                                    Margin="0,0,10,0"
                                    Click="btnExaminarESMA_Click">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="#08A0C3"></Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#A8D8FF"></Setter>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Width="100" 
                                                Height="20"
                                                CornerRadius="10"
                                                Background="{TemplateBinding Background}">
                                                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <Button x:Name="btnCalcular"
                                        Grid.Row="4"
                                        BorderThickness="0"
                                        Content="Calcular"
                                        Foreground="White"
                                        FontSize="16"
                                        FontFamily="Neo Tech Std"
                                        Cursor="Hand"
                                        Grid.Column="1"
                                        HorizontalAlignment="Center"
                                        Click="btnCalcular_Click">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="#08A0C3"></Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#A8D8FF"></Setter>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Width="100" 
                                                    Height="20"
                                                    CornerRadius="10"
                                                    Background="{TemplateBinding Background}">
                                                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <TextBlock Text="Número de pilares de la fila expuesta:"
                                           Grid.Row="6"
                                           FontFamily="Neo Tech Std"
                                           FontWeight="Normal"
                                           Foreground="White"
                                           Margin="5"/>
                                <TextBlock x:Name="numPilaresExp"
                                           Grid.Row="6"
                                           FontFamily="Neo Tech Std"
                                           FontWeight="Normal"
                                           Foreground="White"
                                           VerticalAlignment="Center"
                                           Margin="210,0,0,0"/>
                                <TextBlock Text="Limitación:"
                                           Grid.Row="6"
                                           FontFamily="Neo Tech Std"
                                           FontWeight="Normal"
                                           Foreground="White"
                                           VerticalAlignment="Center"
                                           Margin="250,0,0,0"/>
                                <TextBlock x:Name="limitacionExp"
                                           Grid.Row="6"
                                           FontFamily="Neo Tech Std"
                                           FontWeight="Normal"
                                           Foreground="White"
                                           VerticalAlignment="Center"
                                           Margin="310,0,0,0"/>
                                <TextBlock Text="Número de pilares de la fila resguardo:"
                                           Grid.Row="7"
                                           FontFamily="Neo Tech Std"
                                           FontWeight="Normal"
                                           Foreground="White"
                                           Margin="5"/>
                                <TextBlock x:Name="numPilaresRes"
                                           Grid.Row="7"
                                           FontFamily="Neo Tech Std"
                                           FontWeight="Normal"
                                           Foreground="White"
                                           VerticalAlignment="Center"
                                           Margin="210,0,0,0"/>
                                <TextBlock Text="Limitación:"
                                           Grid.Row="7"
                                           FontFamily="Neo Tech Std"
                                           FontWeight="Normal"
                                           Foreground="White"
                                           VerticalAlignment="Center"
                                           Margin="250,0,0,0"/>
                                <TextBlock x:Name="limitacionRes"
                                           Grid.Row="7"
                                           FontFamily="Neo Tech Std"
                                           FontWeight="Normal"
                                           Foreground="White"
                                           VerticalAlignment="Center"
                                           Margin="310,0,0,0"/>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Border>
</Window>
