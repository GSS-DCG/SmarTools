<Window x:Class="SmarTools.APPS.ItaliaNTC1VAPP"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmarTools.APPS"
        xmlns:estilos="clr-namespace:Ventana_TEST.Styles"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        mc:Ignorable="d"
        Title="ItaliaNTC1VAPP" 
        Height="600
        " Width="1000"
        WindowStyle="None"
        Background="{StaticResource Blue03}"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        Style="{DynamicResource WindowStyle}"
        Tag="https://www.gsolarsteel.com/wp-content/uploads/2024/08/v2-galeria-4-scaled-1-2048x1394.jpg"
        >
    <TabControl>
        <!---->
        <!---->
        <!--CARGAS TRACKER-->
        <!---->
        <!---->
        <TabItem Header="Cargas Tracker" Width="auto" Foreground="#005783" FontFamily="Neo Tech Std Medium" FontSize="13" Height="22" >
            <Grid Margin="0,10,0,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                </Grid.RowDefinitions>
                
                <!--Comprobaciones y checkeos-->
                <TabControl Margin="10,0,10,0" Height="auto" Grid.Row="0" BorderBrush="#005783" BorderThickness="0" VerticalAlignment="Stretch">
                    <TabItem Header="Pilar Motor" Width="auto" Foreground="#005783" FontFamily="Neo Tech Std Medium" FontSize="13" HorizontalAlignment="Center">
                        <ListView Name="PILAR_MOTOR" IsEnabled="True" Height="auto" IsSynchronizedWithCurrentItem="True" Margin="0,0,0,10">
                            <ListView.View>
                                <GridView AllowsColumnReorder="true">

                                    <GridViewColumn DisplayMemberBinding="{Binding Path=NOMBRE_PILAR_MOTOR}" Header="Nombre" Width="auto"/>

                                    <GridViewColumn DisplayMemberBinding="{Binding Path=SECCION_PILAR_MOTOR}" Header="Seccion" Width="auto"/>

                                    <GridViewColumn DisplayMemberBinding="{Binding Path=MATERIAL_PILAR_MOTOR}" Header="Tipo Material" Width="auto"/>

                                    <GridViewColumn DisplayMemberBinding="{Binding Path=RATIO_PILAR_MOTOR}" Header="Ratio" Width="auto"/>

                                    <GridViewColumn DisplayMemberBinding="{Binding Path=ESBELTEZ_PILAR_MOTOR}" Header="Esbeltez" Width="auto"/>

                                    <GridViewColumn DisplayMemberBinding="{Binding Path=ESTADO_PILAR_MOTOR}" Header="Estado" Width="75"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </TabItem>

                    <TabItem Header="Pilar General" Width="auto" Foreground="#005783" FontFamily="Neo Tech Std Medium" FontSize="13" HorizontalAlignment="Center">
                        <ListView Name="PILAR" IsEnabled="True" Height="auto" IsSynchronizedWithCurrentItem="True" Margin="0,0,0,10">
                            <ListView.View>
                                <GridView AllowsColumnReorder="true">

                                    <GridViewColumn DisplayMemberBinding="{Binding Path=NOMBRE_PILAR}" Header="Nombre" Width="auto"/>

                                    <GridViewColumn DisplayMemberBinding="{Binding Path=SECCION_PILAR}" Header="Seccion" Width="auto"/>

                                    <GridViewColumn DisplayMemberBinding="{Binding Path=MATERIAL_PILAR}" Header="Tipo Material" Width="auto"/>

                                    <GridViewColumn DisplayMemberBinding="{Binding Path=RATIO_PILAR}" Header="Ratio" Width="auto"/>

                                    <GridViewColumn DisplayMemberBinding="{Binding Path=ESBELTEZ_PILAR}" Header="Esbeltez" Width="auto"/>

                                    <GridViewColumn DisplayMemberBinding="{Binding Path=ESTADO_PILAR}" Header="Estado" Width="75"/>
                                </GridView>

                            </ListView.View>
                        </ListView>
                    </TabItem>

                    <TabItem Header="Viga Principal" Width="auto" Foreground="#005783" FontFamily="Neo Tech Std Medium" FontSize="13" HorizontalAlignment="Center">
                        <ListView Name="VIGA_PRINCIPAL" IsEnabled="True" Height="auto" IsSynchronizedWithCurrentItem="True" Margin="0,0,0,10">
                            <ListView.View>
                                <GridView AllowsColumnReorder="true">

                                    <GridViewColumn DisplayMemberBinding="{Binding Path=NOMBRE_VIGA}" Header="Nombre" Width="auto"/>

                                    <GridViewColumn DisplayMemberBinding="{Binding Path=SECCION_VIGA}" Header="Seccion" Width="auto"/>

                                    <GridViewColumn DisplayMemberBinding="{Binding Path=MATERIAL_VIGA}" Header="Tipo Material" Width="auto"/>

                                    <GridViewColumn DisplayMemberBinding="{Binding Path=RATIO_VIGA}" Header="Ratio" Width="auto"/>

                                    <GridViewColumn DisplayMemberBinding="{Binding Path=ESBELTEZ_VIGA}" Header="Esbeltez" Width="auto"/>

                                    <GridViewColumn DisplayMemberBinding="{Binding Path=ESTADO_VIGA}" Header="Estado" Width="75"/>
                                </GridView>

                            </ListView.View>
                        </ListView>
                    </TabItem>

                    <TabItem Header="Vigas Secundaria" Width="auto" Foreground="#005783" FontFamily="Neo Tech Std Medium" FontSize="13" HorizontalAlignment="Center">
                        <ListView Name="VIGA_SECUNDARIA" IsEnabled="True" Height="auto" IsSynchronizedWithCurrentItem="True" Margin="0,0,0,10">
                            <ListView.View>
                                <GridView AllowsColumnReorder="true">

                                    <GridViewColumn DisplayMemberBinding="{Binding Path=NOMBRE_SECUNDARIA}" Header="Nombre" Width="auto"/>

                                    <GridViewColumn DisplayMemberBinding="{Binding Path=SECCION_SECUNDARIA}" Header="Seccion" Width="auto"/>

                                    <GridViewColumn DisplayMemberBinding="{Binding Path=MATERIAL_SECUNDARIA}" Header="Tipo Material" Width="auto"/>

                                    <GridViewColumn DisplayMemberBinding="{Binding Path=RATIO_SECUNDARIA}" Header="Ratio" Width="auto"/>

                                    <GridViewColumn DisplayMemberBinding="{Binding Path=ESBELTEZ_SECUNDARIA}" Header="Esbeltez" Width="auto"/>

                                    <GridViewColumn DisplayMemberBinding="{Binding Path=ESTADO_SECUNDARIA}" Header="Estado" Width="75"/>
                                </GridView>

                            </ListView.View>
                        </ListView>
                    </TabItem>
                </TabControl>
                
                <!--Boton Comprobacion-->
                <Button  Height="30" Width="auto" Grid.Row="1" Padding="15,0"
                         Foreground="White" BorderBrush ="#005783" BorderThickness="0" Background="#005783" 
                         HorizontalAlignment="Center" VerticalAlignment="Bottom"
                         Content="Verificar NTC-2018" Click="VERIFICAR_ESTRUCTURA">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="15">

                            </Setter>
                        </Style>
                    </Button.Resources>
                </Button>
                <!--#endregion-->
            </Grid>
        </TabItem>

        <!---->
        <!---->
        <!--COEFICIENTES TRACKER-->
        <!---->
        <!---->
        <TabItem Header="Coeficientes Tracker" Width="auto" Foreground="#005783" FontFamily="Neo Tech Std Medium" FontSize="13">
            <Grid Margin="0,0,0,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.7*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <StackPanel Margin="20,10,10,0" Grid.Row="1" HorizontalAlignment="Left">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"></ColumnDefinition>
                            <ColumnDefinition Width="auto"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" VerticalAlignment="Center" Foreground="#005783">Distancia Eje-Pilar (Motor):</Label>
                        <TextBox x:Name="CABEZA_MOTOR" Width="105" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="#005783" Margin="5,0,5,0"></TextBox>
                        <Label Grid.Column="2" VerticalAlignment="Center" Foreground="#005783">mm</Label>
                    </Grid>
                </StackPanel>

                <StackPanel Margin="20,0,10,0" Grid.Row="2" HorizontalAlignment="left">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"></ColumnDefinition>
                            <ColumnDefinition Width="auto"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" VerticalAlignment="Center" Foreground="#005783">Distancia Eje-Pilar (General):</Label>
                        <TextBox x:Name="CABEZA_GENERAL" Width="105" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="#005783" Margin="5,0,5,0"></TextBox>
                        <Label Grid.Column="2" VerticalAlignment="Center" Foreground="#005783">mm</Label>
                    </Grid>
                </StackPanel>
            </Grid>
        </TabItem>
    </TabControl>

</Window>
