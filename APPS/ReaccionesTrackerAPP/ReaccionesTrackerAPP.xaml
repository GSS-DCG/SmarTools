<Window x:Class="SmarTools.APPS.ReaccionesTrackerAPP.ReaccionesTrackerAPP"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmarTools.APPS.ReaccionesTrackerAPP"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        mc:Ignorable="d"
        Height="600" Width="1000"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        Title="ReaccionesTrackerAPP">
    
    <Border CornerRadius="12">
        <Border.Background>
            <ImageBrush ImageSource="https://www.gsolarsteel.com/wp-content/uploads/2024/08/v2-galeria-4-scaled-1-2048x1394.jpg"
                Stretch="UniformToFill"/>
        </Border.Background>

        <Border CornerRadius="10"
                BorderThickness="2"
                Opacity="0.95">

            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="{StaticResource windowBorderColor1}" Offset="0"></GradientStop>
                    <GradientStop Color="{StaticResource windowBorderColor2}" Offset="0.5"></GradientStop>
                    <GradientStop Color="{StaticResource windowBorderColor3}" Offset="1"></GradientStop>
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Grid>
                <!--Navigation Menu-->
                <Border CornerRadius="10,0,0,10"
                        Grid.Column="0">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="{StaticResource primaryBackColor1}" Offset="0"></GradientStop>
                            <GradientStop Color="{StaticResource primaryBackColor2}" Offset="0.75"></GradientStop>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>

                <TextBlock x:Name="VersionInfoText" 
                   VerticalAlignment="Bottom" 
                   Text="Error" 
                   Foreground="White" 
                   FontFamily="Neo Tech Std" 
                   FontSize="15" Margin="25,0,0,10"></TextBlock>

                <!--Main Section-->
                <Border CornerRadius="0,10,10,0"
                        Grid.Column="1">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="1,1" EndPoint="0,0">
                            <GradientStop Color="{StaticResource primaryBackColor1}" Offset="0"></GradientStop>
                            <GradientStop Color="{StaticResource primaryBackColor2}" Offset="0.75"></GradientStop>
                        </LinearGradientBrush>
                    </Border.Background>

                    <Grid>
                        <Grid.RowDefinitions>
                            <!--Control Bar-->
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="450"/>
                            <!--Content Section-->
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Listados de cálculo"
                                   VerticalAlignment="Center"
                                   Foreground="White"
                                   FontFamily="Neo Tech Std"
                                   Margin="10,0,0,0"
                                   FontSize="13.5"/>
                        <!--Control Bar-->
                        <StackPanel x:Name="pnlControlBar"
                                    Grid.Row="0"
                                    Orientation="Horizontal"
                                    FlowDirection="RightToLeft"
                                    Background="Transparent"
                                    Margin="0,0,5,0"
                                    MouseLeftButtonDown="pnlcControlBar_MouseLeftButtonDown"
                                    MouseEnter="pnlControlBar_MouseEnter">

                            <Button x:Name="btnClose"
                                    Style="{StaticResource ControlButton}"
                                    Tag="{StaticResource General4}"
                                    Click="btnClose_Click">
                                <fa:IconImage Icon="Xmark" Style="{StaticResource ControlButtonIcon}"></fa:IconImage>
                            </Button>

                            <Button x:Name="btnMaximize"
                                    Style="{StaticResource ControlButton}"
                                    Tag="{StaticResource General4}"
                                    Click="btnMaximize_Click">
                                <fa:IconImage Icon="WindowMaximize" Style="{StaticResource ControlButtonIcon}"></fa:IconImage>
                            </Button>

                            <Button x:Name="btnMinimize"
                                    Style="{StaticResource ControlButton}"
                                    Tag="{StaticResource General4}"
                                    Click="btnMinimize_Click">
                                <fa:IconImage Icon="WindowMinimize" Style="{StaticResource ControlButtonIcon}"></fa:IconImage>
                            </Button>
                        </StackPanel>
                        <StackPanel x:Name="Ventana"
                                    Grid.Row="1"
                                    Orientation="Vertical"
                                    Margin="10,10,10,0">
















                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Grid>
                                    <Border BorderThickness="0,0,1,0" BorderBrush="{DynamicResource Blue02}">
                                        <StackPanel Orientation="Vertical">

                                            <TextBlock Text="Menu" Margin="25,25,0,30" FontSize="20" Foreground="White" FontFamily="Neo Tech Std"/>
                                            <!--Menu Button-->
                                            <RadioButton Style="{StaticResource menuButton}"
                            Tag="{StaticResource General4}"
                            Click="RellenarPOT_Click">
                                                <StackPanel Orientation="Horizontal">
                                                    <fa:IconImage Icon="FileExcel" Style="{StaticResource menuButtonIcon}"/>
                                                    <TextBlock Text="Rellenar POT" Style="{StaticResource menuButtonText}"/>
                                                </StackPanel>
                                            </RadioButton>
                                            <!--Menu Button-->
                                            <RadioButton Style="{StaticResource menuButton}"
                            Tag="{StaticResource General4}"
                            Click="ObtenerExcels_Click">
                                                <StackPanel Orientation="Horizontal">
                                                    <fa:IconImage Icon="FileExport" Style="{StaticResource menuButtonIcon}"/>
                                                    <TextBlock Text="Obtener Excels" Style="{StaticResource menuButtonText}"/>
                                                </StackPanel>
                                            </RadioButton>
                                        </StackPanel>
                                    </Border>
                                </Grid>

                                <Frame x:Name="MainViewContentControl" NavigationUIVisibility="Hidden" Grid.Column="1" Margin="25,0,0,-500"/>

                            </Grid>













                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Border>
</Window>

