<Page x:Class="SmarTools.APPS.ReaccionesTrackerAPP.ObtenerExcels"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SmarTools.APPS.ReaccionesTrackerAPP"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ObtenerExcels">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>
                <Label Content="Ruta archivos de SAP"
                                Grid.Row="0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Foreground="White"
                                Margin="10,20,0,0"
                                FontFamily="Neo Tech Std"
                                FontWeight="Bold"/>

                <TextBox x:Name="SAPFilesRoute"
                                    IsEnabled="False"
                                    Grid.Row="1"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Width="550"
                                    Height="20"
                                    Margin="10,20,0,0"
                                    Foreground="Black"
                                    FontStyle="Italic"/>

                <Button Content="Examinar"
                                Grid.Row="1"
                                x:Name="SearchSAPFiles"
                                Width="100"
                                Height="20"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Margin="580,20,50,0"
                                Click="SearchSAPFiles_Click"
                                Foreground="White"
                                FontSize="16"
                                FontFamily="Neo Tech Std"
                                Cursor="Hand"
                                BorderThickness="0">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#08A0C3"></Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#A8D8FF"></Setter>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Width="100" 
                                                                                                    Height="20"
                                                                                                    CornerRadius="10"
                                                                                                    Background="{TemplateBinding Background}">
                                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                </Button>

                <Label Content="Ruta para guardar excel reacciones"
                                Grid.Row="2"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Foreground="White"
                                Margin="10,30,0,0"
                                FontFamily="Neo Tech Std"
                                FontWeight="Bold"/>

                <TextBox x:Name="ReactionsSaveRoute"
                                    IsEnabled="False"
                                    Grid.Row="3"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Width="550"
                                    Height="20"
                                    Margin="10,20,0,0"
                                    Foreground="Black"
                                    FontStyle="Italic"/>

                <Button Content="Examinar"
                                Grid.Row="3"
                                x:Name="SearchSaveFolder"
                                Width="100"
                                Height="20"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Margin="580,20,50,0"
                                Click="SearchSaveFolder_Click"
                                Foreground="White"
                                FontSize="16"
                                FontFamily="Neo Tech Std"
                                Cursor="Hand"
                                BorderThickness="0">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#08A0C3"></Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#A8D8FF"></Setter>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Width="100" 
                                                                                                    Height="20"
                                                                                                    CornerRadius="10"
                                                                                                    Background="{TemplateBinding Background}">
                                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                </Button>

                <Button Content="Obtener Reacciones"
                                Grid.Row="4"
                                x:Name="ObtainReactions"
                                Width="250"
                                Height="20"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Margin="490,60,0,0"
                                Click="ObtainExcels_Click"
                                Foreground="White"
                                FontSize="16"
                                FontFamily="Neo Tech Std"
                                Cursor="Hand"
                                BorderThickness="0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#08A0C3"></Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#A8D8FF"></Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="180" 
                                                                                                    Height="20"
                                                                                                    CornerRadius="10"
                                                                                                    Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </StackPanel>
    </Grid>

</Page>

