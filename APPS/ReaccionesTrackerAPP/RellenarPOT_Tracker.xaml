                    <Label Name="MedioStrExp"
                                    Content="Expuesto"
                                    Margin="0,15,0,0"
                                    FontFamily="Neo Tech Std"
                                    Foreground="White"/>

                </StackPanel>
                <StackPanel Orientation="Horizontal"
                                Grid.Row="3">

                    <CheckBox x:Name="Res2"
                                            IsEnabled="{Binding ElementName=str2, Path=IsChecked}"
                                            Margin="40,5,0,0"
                                            IsChecked="False"/>

                    <Label Name="DosStrRes"
                                    Content="Resguardo"
                                    Margin="0,0,0,0"
                                    FontFamily="Neo Tech Std"
                                    Foreground="White"/>

                    <CheckBox x:Name="Res1ymed"
                                        IsEnabled="{Binding ElementName=str1ymed, Path=IsChecked}"
                                        Margin="95,5,0,0"
