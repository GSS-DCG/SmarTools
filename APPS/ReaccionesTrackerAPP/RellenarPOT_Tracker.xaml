                                        Height="20"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Margin="75,10,0,0"
                                        Click="SearchFolder1str_Click"
                                        Foreground="White"
                                        FontSize="16"
                                        FontFamily="Neo Tech Std"
                                        Cursor="Hand"
                                        BorderThickness="0">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Background" Value="#08A0C3"></Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#A8D8FF"></Setter>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Width="100" 
                                                                                        Height="20"
                                                                                        CornerRadius="10"
                                                                                        Background="{TemplateBinding Background}">
                                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                    </Button>

                    <Button Content="Examinar"
                                        x:Name="Search0ymedst"
                                        IsEnabled="{Binding ElementName=str0ymed, Path=IsChecked}"
                                        Width="100"
                                        Height="20"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Margin="70,10,0,0"
                                        Click="SearchFolder0ymedstr_Click"
                                        Foreground="White"
                                        FontSize="16"
                                        FontFamily="Neo Tech Std"
                                        Cursor="Hand"
                                        BorderThickness="0">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Background" Value="#08A0C3"></Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#A8D8FF"></Setter>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Width="100" 
                                                                                        Height="20"
                                                                                        CornerRadius="10"
                                                                                        Background="{TemplateBinding Background}">
                                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                    </Button>
                </StackPanel>

                <Label Content="Ruta excel POT original"
