                                    Grid.Row="8"
                                    Margin="40,10,0,0"
                                    Content="Tracker 1" 
                                    IsEnabled="{Binding ElementName=ESMA_2str, Path=IsChecked}"
                                    Foreground="White"
                                    FontFamily="Neo Tech Std"
                                    IsChecked="False"
                                    GroupName="GrupoTracker2str" />

                <RadioButton x:Name="str2tracker2" 
