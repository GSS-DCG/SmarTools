                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Foreground="White"
                            Margin="10,20,0,0"
                            FontFamily="Neo Tech Std"
                            FontWeight="Bold"/>

                <StackPanel Orientation="Horizontal"
                                Grid.Row="1">

                    <CheckBox x:Name="str2"
