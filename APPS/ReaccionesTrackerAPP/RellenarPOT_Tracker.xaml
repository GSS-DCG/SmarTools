                    <Label Name="DosStrExp"
                                    Content="Expuesto"
                                    Margin="0,15,0,0"
                                    FontFamily="Neo Tech Std"
                                    Foreground="White"/>

                    <CheckBox x:Name="Exp1ymed"
                                        IsEnabled="{Binding ElementName=str1ymed, Path=IsChecked}"
                                        Margin="102,20,0,0"
                                        IsChecked="False"/>

                    <Label Name="UnoymedStrExp"
                                    Content="Expuesto"
                                    Margin="0,15,0,0"
                                    FontFamily="Neo Tech Std"
                                    Foreground="White"/>

                    <CheckBox x:Name="Exp1"
                                        IsEnabled="{Binding ElementName=str1, Path=IsChecked}"
                                        Margin="102,20,0,0"
                                        IsChecked="False"/>

                    <Label Name="UnStrExp"
                                    Content="Expuesto"
                                    Margin="0,15,0,0"
                                    FontFamily="Neo Tech Std"
                                    Foreground="White"/>

                    <CheckBox x:Name="Exp0ymed"
