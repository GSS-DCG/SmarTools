                            VerticalAlignment="Top"
                            Foreground="White"
                            Margin="10,20,0,0"
                            FontFamily="Neo Tech Std"
                            FontWeight="Bold"/>

                <CheckBox x:Name="ESMA_2str"
                                Grid.Row="7"
                                IsEnabled="{Binding ElementName=str2, Path=IsChecked}"
                                Margin="40,50,0,0"
                                IsChecked="False"/>

                <Label Name="ESMA_2str_label"
                            Grid.Row="7"
