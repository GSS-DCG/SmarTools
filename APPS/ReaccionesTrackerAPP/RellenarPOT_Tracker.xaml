                                                                                CornerRadius="10"
                                                                                Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                </Button>

                <Button Content="Rellenar POT"
