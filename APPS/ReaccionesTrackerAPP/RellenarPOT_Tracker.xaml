                                    FontFamily="Neo Tech Std"
                                    Foreground="White"/>

                    <CheckBox x:Name="Res0ymed"
                                        IsEnabled="{Binding ElementName=str0ymed, Path=IsChecked}"
                                        Margin="85,5,0,0"
                                        IsChecked="False"/>

                    <Label Name="MedioStrRes"
                                    Content="Resguardo"
                                    Margin="0,0,0,0"
                                    FontFamily="Neo Tech Std"
                                    Foreground="White"/>

                </StackPanel>
                <StackPanel Orientation="Horizontal"
                                Grid.Row="4">

                    <Button Content="Examinar"
