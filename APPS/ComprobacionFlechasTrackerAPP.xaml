<Window x:Class="SmarTools.APPS.ComprobacionFlechasTrackerAPP"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmarTools.APPS"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        mc:Ignorable="d"
        Title="ComprobacionFlechasTrackerAPP" Height="450" Width="800"        
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen">

    <Border CornerRadius="12">
        <Border.Background>
            <ImageBrush ImageSource="https://www.gsolarsteel.com/wp-content/uploads/2024/08/v2-galeria-4-scaled-1-2048x1394.jpg"
                        Stretch="UniformToFill"/>
        </Border.Background>

        <Border CornerRadius="10"
                BorderThickness="2"
                Opacity="0.95">

            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="{StaticResource windowBorderColor1}" Offset="0"></GradientStop>
                    <GradientStop Color="{StaticResource windowBorderColor2}" Offset="0.5"></GradientStop>
                    <GradientStop Color="{StaticResource windowBorderColor3}" Offset="1"></GradientStop>
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Grid>
                <!--Navigation Menu-->
                <Border CornerRadius="10,0,0,10"
                        Grid.Column="0">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="{StaticResource primaryBackColor1}" Offset="0"></GradientStop>
                            <GradientStop Color="{StaticResource primaryBackColor2}" Offset="0.75"></GradientStop>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>

                <TextBlock x:Name="VersionInfoText" 
                           VerticalAlignment="Bottom" 
                           Text="Error" 
                           Foreground="White" 
                           FontFamily="Neo Tech Std" 
                           FontSize="15" Margin="25,0,0,10"></TextBlock>

                <!--Main Section-->
                <Border CornerRadius="0,10,10,0"
                        Grid.Column="1">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="1,1" EndPoint="0,0">
                            <GradientStop Color="{StaticResource primaryBackColor1}" Offset="0"></GradientStop>
                            <GradientStop Color="{StaticResource primaryBackColor2}" Offset="0.75"></GradientStop>
                        </LinearGradientBrush>
                    </Border.Background>

                    <Grid>
                        <Grid.RowDefinitions>
                            <!--Control Bar-->
                            <RowDefinition Height="25"/>
                            <!--Content Section-->
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Comprobación de Flechas"
                                   VerticalAlignment="Center"
                                   Foreground="White"
                                   FontWeight="Medium"
                                   FontFamily="Neo Tech Std"
                                   Margin="10,0,0,0"
                                   FontSize="13.5"/>
                        <!--Control Bar-->
                        <StackPanel x:Name="pnlControlBar"
                                    Grid.Row="0"
                                    Orientation="Horizontal"
                                    FlowDirection="RightToLeft"
                                    Background="Transparent"
                                    Margin="0,0,5,0"
                                    MouseLeftButtonDown="pnlcControlBar_MouseLeftButtonDown"
                                    MouseEnter="pnlControlBar_MouseEnter">

                            <Button x:Name="btnClose"
                                    Style="{StaticResource ControlButton}"
                                    Tag="{StaticResource General4}"
                                    Click="btnClose_Click">
                                <fa:IconImage Icon="Xmark" Style="{StaticResource ControlButtonIcon}"></fa:IconImage>
                            </Button>

                            <Button x:Name="btnMaximize"
                                    Style="{StaticResource ControlButton}"
                                    Tag="{StaticResource General4}"
                                    Click="btnMaximize_Click">
                                <fa:IconImage Icon="WindowMaximize" Style="{StaticResource ControlButtonIcon}"></fa:IconImage>
                            </Button>

                            <Button x:Name="btnMinimize"
                                    Style="{StaticResource ControlButton}"
                                    Tag="{StaticResource General4}"
                                    Click="btnMinimize_Click">
                                <fa:IconImage Icon="WindowMinimize" Style="{StaticResource ControlButtonIcon}"></fa:IconImage>
                            </Button>
                        </StackPanel>

                        <!--User Control-->
                        <Grid x:Name="MainViewContentControl"
                              Grid.Row="2"
                              Margin="25">
                            <StackPanel x:Name="TablaResultados"
                                        Grid.Row="0"
                                        Orientation="Horizontal"
                                        FlowDirection="LeftToRight"
                                        Background="Transparent"
                                        Margin="0,0,5,0"
                                        MouseLeftButtonDown="pnlcControlBar_MouseLeftButtonDown"
                                        MouseEnter="pnlControlBar_MouseEnter"
                                        Height="360">
                                <Grid Margin="0,0,0,0" Height="360">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="30"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="175"/>
                                        <ColumnDefinition Width="175"/>
                                        <ColumnDefinition Width="175"/>
                                        <ColumnDefinition Width="175"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Column="0" Grid.Row="0"
                                            Content="Deformación"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontFamily="Neo Tech Std"
                                            FontWeight="Medium"
                                            FontSize="13.5"
                                            Foreground="White"/>
                                    <Label Grid.Column="0" Grid.Row="1"
                                            Content="Desplome de Pilares"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontFamily="Neo Tech Std"
                                            FontWeight="Medium"
                                            FontSize="13.5"
                                            Foreground="White"/>
                                    <Label Grid.Column="0" Grid.Row="2"
                                            Content="Flecha de vigas"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontFamily="Neo Tech Std"
                                            FontWeight="Medium"
                                            FontSize="13.5"
                                            Foreground="White"/>
                                    <Label Grid.Column="0" Grid.Row="3"
                                            Content="Flecha de voladizo"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontFamily="Neo Tech Std"
                                            FontWeight="Medium"
                                            FontSize="13.5"
                                            Foreground="White"/>
                                    <Label Grid.Column="0" Grid.Row="4"
                                            Content="Flecha de secundarias"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontFamily="Neo Tech Std"
                                            FontWeight="Medium"
                                            FontSize="13.5"
                                            Foreground="White"/>
                                    <Label Grid.Column="1" Grid.Row="0"
                                            Content="Resultado"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontFamily="Neo Tech Std"
                                            FontWeight="Medium"
                                            FontSize="13.5"
                                            Foreground="White"/>
                                    <Label Grid.Column="1" Grid.Row="1"
                                            x:Name="Resultado_pilares"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontFamily="Neo Tech Std"
                                            FontWeight="Light"
                                            FontSize="13.5"
                                            Foreground="White"/>
                                    <Label Grid.Column="1" Grid.Row="2"
                                            x:Name="Resultado_vigas"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontFamily="Neo Tech Std"
                                            FontWeight="Light"
                                            FontSize="13.5"
                                            Foreground="White"/>
                                    <Label Grid.Column="1" Grid.Row="3"
                                            x:Name="Resultado_voladizo"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontFamily="Neo Tech Std"
                                            FontWeight="Light"
                                            FontSize="13.5"
                                            Foreground="White"/>
                                    <Label Grid.Column="1" Grid.Row="4"
                                            x:Name="Resultado_secundarias"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontFamily="Neo Tech Std"
                                            FontWeight="Light"
                                            FontSize="13.5"
                                            Foreground="White"/>
                                    <Label Grid.Column="2" Grid.Row="0"
                                            Content="Flecha máx admisible"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontFamily="Neo Tech Std"
                                            FontWeight="Medium"
                                            FontSize="13.5"
                                            Foreground="White"/>
                                    <Label Grid.Column="2" Grid.Row="1"
                                            x:Name="Admisible_pilares"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontFamily="Neo Tech Std"
                                            FontWeight="Light"
                                            FontSize="13.5"
                                            Foreground="White"/>
                                    <Label Grid.Column="2" Grid.Row="2"
                                            x:Name="Admisible_vigas"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontFamily="Neo Tech Std"
                                            FontWeight="Light"
                                            FontSize="13.5"
                                            Foreground="White"/>
                                    <Label Grid.Column="2" Grid.Row="3"
                                            x:Name="Admisible_voladizo"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontFamily="Neo Tech Std"
                                            FontWeight="Light"
                                            FontSize="13.5"
                                            Foreground="White"/>
                                    <Label Grid.Column="2" Grid.Row="4"
                                            x:Name="Admisible_secundarias"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontFamily="Neo Tech Std"
                                            FontWeight="Light"
                                            FontSize="13.5"
                                            Foreground="White"/>
                                    <Label Grid.Column="3" Grid.Row="0"
                                            Content="Check"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontFamily="Neo Tech Std"
                                            FontWeight="Medium"
                                            FontSize="13.5"
                                            Foreground="White"/>
                                    <Label Grid.Column="3" Grid.Row="1"
                                            x:Name="Check_pilares"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontFamily="Neo Tech Std"
                                            FontWeight="Light"
                                            FontSize="13.5"
                                            Foreground="White"/>
                                    <Label Grid.Column="3" Grid.Row="2"
                                            x:Name="Check_vigas"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontFamily="Neo Tech Std"
                                            FontWeight="Light"
                                            FontSize="13.5"
                                            Foreground="White"/>
                                    <Label Grid.Column="3" Grid.Row="3"
                                            x:Name="Check_voladizo"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontFamily="Neo Tech Std"
                                            FontWeight="Light"
                                            FontSize="13.5"
                                            Foreground="White"/>
                                    <Label Grid.Column="3" Grid.Row="4"
                                            x:Name="Check_secundarias"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontFamily="Neo Tech Std"
                                            FontWeight="Light"
                                            FontSize="13.5"
                                            Foreground="White"/>
                                    <Border Grid.Column="0" Grid.Row="0" Grid.RowSpan="5" Grid.ColumnSpan="4" BorderBrush="White" BorderThickness="2"/>
                                    <Border Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="4" BorderBrush="White" BorderThickness="0,0,0,2"/>
                                    <Border Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="4" BorderBrush="White" BorderThickness="0,0,0,1"/>
                                    <Border Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="4" BorderBrush="White" BorderThickness="0,0,0,1"/>
                                    <Border Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="4" BorderBrush="White" BorderThickness="0,0,0,1"/>
                                    <Border Grid.Column="0" Grid.Row="0" Grid.RowSpan="5" BorderBrush="White" BorderThickness="0,0,2,0"/>
                                    <Border Grid.Column="1" Grid.Row="0" Grid.RowSpan="5" BorderBrush="White" BorderThickness="0,0,1,0"/>
                                    <Border Grid.Column="2" Grid.Row="0" Grid.RowSpan="5" BorderBrush="White" BorderThickness="0,0,1,0"/>

                                </Grid>
                            </StackPanel>
                            <Button x:Name="btnCalcularFlecha"
                                    BorderThickness="0"
                                    Content="Calcular"
                                    Foreground="White"
                                    FontSize="16"
                                    FontFamily="Neo Tech Std"
                                    Cursor="Hand"
                                    Grid.Column="1"
                                    Margin="0,20,0,0"
                                    Click="btnCalcularFlecha_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#08A0C3"></Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#A8D8FF"></Setter>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Width="150" 
                                            Height="40"
                                            CornerRadius="20"
                                            Background="{TemplateBinding Background}">
                                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Border>
</Window>

