                                     Grid.Row="16" Grid.Column="1"
                                     Background="Transparent"
                                     Width="40"
                                     Foreground="White"
                                     FontFamily="Neo Tech Std"
                                     FontWeight="Light"
                                     HorizontalAlignment="Center"
                                     HorizontalContentAlignment="Center"
