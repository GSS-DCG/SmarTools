                                 Background="Transparent"
                                 Width="40"
                                 Foreground="White"
                                 FontFamily="Neo Tech Std"
                                 FontWeight="Light"
                                 HorizontalAlignment="Center"
                                 HorizontalContentAlignment="Center"
                                 VerticalAlignment="Center"
                                 BorderBrush="White"
                                 BorderThickness="0,0,0,1"/>
                            <TextBlock Text="kN/m2"
                                   Grid.Row="12" Grid.Column="2"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Left"
                                   FontFamily="Neo Tech Std"
                                   Foreground="White"
                                   FontWeight="Light"/>
                            <CheckBox x:Name="SuccionInf_Check"
                                  Grid.Row="12" Grid.Column="3"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Center"
                                  Foreground="{StaticResource Blue02}"/>
                            <TextBlock Text="CARGAS DE VIENTO LATERAL"
                                       Grid.Row="14" Grid.Column="0" Grid.ColumnSpan="2"
                                       VerticalAlignment="Center"
                                       FontFamily="Neo Tech Std"
                                       Foreground="White"
                                       FontWeight="Bold"/>
                            <CheckBox x:Name="VientoLateral_Check"
                                      Grid.Row="14" Grid.Column="1"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Center"
                                      Foreground="{StaticResource Blue02}"/>
