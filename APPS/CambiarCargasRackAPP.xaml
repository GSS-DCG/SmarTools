<Window x:Class="SmarTools.APPS.CambiarCargasRackAPP"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmarTools.APPS"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        mc:Ignorable="d"
        Title="CambiarCargasRackAPP" Height="500" Width="550"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        FontFamily="Neo Tech Std"
        FontWeight="Light"
        FontSize="13">
    <Border CornerRadius="12">
        <Border.Background>
            <ImageBrush ImageSource="https://www.gsolarsteel.com/wp-content/uploads/2024/08/v2-galeria-4-scaled-1-2048x1394.jpg"
                         Stretch="UniformToFill"/>
        </Border.Background>
        <Border CornerRadius="10"
                 BorderThickness="2"
                 Opacity="0.95">

            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="{StaticResource windowBorderColor1}" Offset="0"></GradientStop>
                    <GradientStop Color="{StaticResource windowBorderColor2}" Offset="0.5"></GradientStop>
                    <GradientStop Color="{StaticResource windowBorderColor3}" Offset="1"></GradientStop>
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Grid>
                <!--Navigation Menu-->
                <Border CornerRadius="10,0,0,10"
                        Grid.Column="0">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="{StaticResource primaryBackColor1}" Offset="0"></GradientStop>
                            <GradientStop Color="{StaticResource primaryBackColor2}" Offset="0.75"></GradientStop>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>

                <TextBlock x:Name="VersionInfoText" 
                            VerticalAlignment="Bottom" 
                            Text="Error" 
                            Foreground="White" 
                            FontFamily="Neo Tech Std" 
                            FontSize="15" Margin="25,0,0,10"></TextBlock>

                <!--Main Section-->
                <Border CornerRadius="0,10,10,0"
                        Grid.Column="1">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="1,1" EndPoint="0,0">
                            <GradientStop Color="{StaticResource primaryBackColor1}" Offset="0"></GradientStop>
                            <GradientStop Color="{StaticResource primaryBackColor2}" Offset="0.75"></GradientStop>
                        </LinearGradientBrush>
                    </Border.Background>

                    <Grid>
                        <Grid.RowDefinitions>
                            <!--Control Bar-->
                            <RowDefinition Height="25"/>
                            <!--Content Section-->
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Cambiar Cargas"
                                    VerticalAlignment="Center"
                                    Foreground="White"
                                    FontWeight="Medium"
                                    FontFamily="Neo Tech Std"
                                    Margin="10,0,0,0"
                                    FontSize="13.5"/>
                        <!--Control Bar-->
                        <StackPanel x:Name="pnlControlBar"
                                 Grid.Row="0"
                                 Orientation="Horizontal"
                                 FlowDirection="RightToLeft"
                                 Background="Transparent"
                                 Margin="0,0,5,0"
                                 MouseLeftButtonDown="pnlcControlBar_MouseLeftButtonDown"
                                 MouseEnter="pnlControlBar_MouseEnter">

                            <Button x:Name="btnClose"
                                     Style="{StaticResource ControlButton}"
                                     Tag="{StaticResource General4}"
                                     Click="btnClose_Click">
                                <fa:IconImage Icon="Xmark" Style="{StaticResource ControlButtonIcon}"></fa:IconImage>
                            </Button>

                            <Button x:Name="btnMaximize"
                                     Style="{StaticResource ControlButton}"
                                     Tag="{StaticResource General4}"
                                     Click="btnMaximize_Click">
                                <fa:IconImage Icon="WindowMaximize" Style="{StaticResource ControlButtonIcon}"></fa:IconImage>
                            </Button>

                            <Button x:Name="btnMinimize"
                                 Style="{StaticResource ControlButton}"
                                 Tag="{StaticResource General4}"
                                 Click="btnMinimize_Click">
                                <fa:IconImage Icon="WindowMinimize" Style="{StaticResource ControlButtonIcon}"></fa:IconImage>
                            </Button>
                        </StackPanel>

                        <!--User Control-->
                        <Grid Grid.Row="1"
                              Margin="10,10,10,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="170"/>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="25"/>
                                <RowDefinition Height="25"/>
                                <RowDefinition Height="25"/>
                                <RowDefinition Height="25"/>
                                <RowDefinition Height="25"/>
                                <RowDefinition Height="25"/>
                                <RowDefinition Height="25"/>
                                <RowDefinition Height="25"/>
                                <RowDefinition Height="25"/>
                                <RowDefinition Height="25"/>
                                <RowDefinition Height="25"/>
                                <RowDefinition Height="25"/>
                                <RowDefinition Height="25"/>
                                <RowDefinition Height="25"/>
                                <RowDefinition Height="25"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="CARGAS DE PESO PROPIO"
                                       Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                                       VerticalAlignment="Center"
                                       FontFamily="Neo Tech Std"
                                       Foreground="White"
                                       FontWeight="Bold"/>
                            <TextBlock Text="CAMBIAR"
                                       Grid.Row="0" Grid.Column="3"
                                       VerticalAlignment="Center"
                                       FontFamily="Neo Tech Std"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       FontWeight="Bold"/>
                            <TextBlock Text="Peso Propio de paneles:"
                                       Grid.Row="1" Grid.Column="0"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right"
                                       FontFamily="Neo Tech Std"
                                       Foreground="White"
                                       FontWeight="Light"/>
                            <TextBox x:Name="PesoPropio_Panel" 
                                     Grid.Row="1" Grid.Column="1"
                                     Background="Transparent"
                                     Width="40"
                                     Foreground="White"
                                     FontFamily="Neo Tech Std"
                                     FontWeight="Light"
                                     HorizontalAlignment="Center"
                                     HorizontalContentAlignment="Center"
                                     VerticalAlignment="Center"
                                     BorderBrush="White"
                                     BorderThickness="0,0,0,1"/>
                            <TextBlock Text="kN/m2"
                                       Grid.Row="1" Grid.Column="2"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       FontFamily="Neo Tech Std"
                                       Foreground="White"
                                       FontWeight="Light"/>
                            <CheckBox x:Name="PesoPropio_Check"
                                      Grid.Row="1" Grid.Column="3"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Center"
                                      Foreground="{StaticResource Blue02}"/>
                            <TextBlock Text="Peso Propio del cable:"
                                       Grid.Row="2" Grid.Column="0"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right"
                                       FontFamily="Neo Tech Std"
                                       Foreground="White"
                                       FontWeight="Light"/>
                            <TextBox x:Name="PesoPropio_Cable" 
                                    Grid.Row="2" Grid.Column="1"
                                    Background="Transparent"
                                    Width="40"
                                    Foreground="White"
                                    FontFamily="Neo Tech Std"
                                    FontWeight="Light"
                                    HorizontalAlignment="Center"
                                    HorizontalContentAlignment="Center"
                                    VerticalAlignment="Center"
                                    BorderBrush="White"
                                     BorderThickness="0,0,0,1"/>
                            <TextBlock Text="kN/m"
                                       Grid.Row="2" Grid.Column="2"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       FontFamily="Neo Tech Std"
                                       Foreground="White"
                                       FontWeight="Light"/>
                            <CheckBox x:Name="PesoCable_Check"
                                      Grid.Row="2" Grid.Column="3"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Center"
                                      Foreground="{StaticResource Blue02}"/>
                            <TextBlock Text="CARGAS DE NIEVE"
                                       Grid.Row="4" Grid.Column="0"
                                       VerticalAlignment="Center"
                                       FontFamily="Neo Tech Std"
                                       Foreground="White"
                                       FontWeight="Bold"/>
                            <TextBlock Text="Carga nieve:"
                                       Grid.Row="5" Grid.Column="0"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right"
                                       FontFamily="Neo Tech Std"
                                       Foreground="White"
                                       FontWeight="Light"/>
                            <TextBox x:Name="Carga_Nieve" 
                                     Grid.Row="5" Grid.Column="1"
                                     Background="Transparent"
                                     Width="40"
                                     Foreground="White"
                                     FontFamily="Neo Tech Std"
                                     FontWeight="Light"
                                     HorizontalAlignment="Center"
                                     HorizontalContentAlignment="Center"
                                     VerticalAlignment="Center"
                                     BorderBrush="White"
                                     BorderThickness="0,0,0,1"/>
                            <TextBlock Text="kN/m2"
                                       Grid.Row="5" Grid.Column="2"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       FontFamily="Neo Tech Std"
                                       Foreground="White"
                                       FontWeight="Light"/>
                            <CheckBox x:Name="CargaNieve_Check"
                                      Grid.Row="5" Grid.Column="3"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Center"
                                      Foreground="{StaticResource Blue02}"/>
                            <TextBlock Text="Carga nieve accidental:"
                                       Grid.Row="6" Grid.Column="0"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right"
                                       FontFamily="Neo Tech Std"
                                       Foreground="White"
                                       FontWeight="Light"/>
                            <TextBox x:Name="Carga_NieveAccidental" 
                                     Grid.Row="6" Grid.Column="1"
                                     Background="Transparent"
                                     Width="40"
                                     Foreground="White"
                                     FontFamily="Neo Tech Std"
                                     FontWeight="Light"
                                     HorizontalAlignment="Center"
                                     HorizontalContentAlignment="Center"
                                     VerticalAlignment="Center"
                                     BorderBrush="White"
                                     BorderThickness="0,0,0,1"/>
                            <TextBlock Text="kN/m2"
                                       Grid.Row="6" Grid.Column="2"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       FontFamily="Neo Tech Std"
                                       Foreground="White"
                                       FontWeight="Light"/>
                            <CheckBox x:Name="CargaNieveAccidental_Check"
                                      Grid.Row="6" Grid.Column="3"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Center"
                                      Foreground="{StaticResource Blue02}"/>
                            <TextBlock Text="CARGAS DE VIENTO"
                                       Grid.Row="8" Grid.Column="0"
                                       VerticalAlignment="Center"
                                       FontFamily="Neo Tech Std"
                                       Foreground="White"
                                       FontWeight="Bold"/>
                            <TextBlock Text="Presión superior:"
                                       Grid.Row="9" Grid.Column="0"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right"
                                       FontFamily="Neo Tech Std"
                                       Foreground="White"
                                       FontWeight="Light"/>
                            <TextBox x:Name="Presion_Sup" 
                                     Grid.Row="9" Grid.Column="1"
                                     Background="Transparent"
                                     Width="40"
                                     Foreground="White"
                                     FontFamily="Neo Tech Std"
                                     FontWeight="Light"
                                     HorizontalAlignment="Center"
                                     HorizontalContentAlignment="Center"
                                     VerticalAlignment="Center"
                                     BorderBrush="White"
                                     BorderThickness="0,0,0,1"/>
                            <TextBlock Text="kN/m2"
                                       Grid.Row="9" Grid.Column="2"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       FontFamily="Neo Tech Std"
                                       Foreground="White"
                                       FontWeight="Light"/>
                            <CheckBox x:Name="PresionSup_Check"
                                      Grid.Row="9" Grid.Column="3"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Center"
                                      Foreground="{StaticResource Blue02}"/>
                            <TextBlock Text="Presión inferior:"
                                       Grid.Row="10" Grid.Column="0"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right"
                                       FontFamily="Neo Tech Std"
                                       Foreground="White"
                                       FontWeight="Light"/>
                            <TextBox x:Name="Presion_Inf" 
                                     Grid.Row="10" Grid.Column="1"
                                     Background="Transparent"
                                     Width="40"
                                     Foreground="White"
                                     FontFamily="Neo Tech Std"
                                     FontWeight="Light"
                                     HorizontalAlignment="Center"
                                     HorizontalContentAlignment="Center"
                                     VerticalAlignment="Center"
                                     BorderBrush="White"
                                     BorderThickness="0,0,0,1"/>
                            <TextBlock Text="kN/m2"
                                       Grid.Row="10" Grid.Column="2"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       FontFamily="Neo Tech Std"
                                       Foreground="White"
                                       FontWeight="Light"/>
                            <CheckBox x:Name="PresionInf_Check"
                                      Grid.Row="10" Grid.Column="3"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Center"
                                      Foreground="{StaticResource Blue02}"/>
                            <TextBlock Text="Succión superior:"
                                       Grid.Row="11" Grid.Column="0"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right"
                                       FontFamily="Neo Tech Std"
                                       Foreground="White"
                                       FontWeight="Light"/>
                            <TextBox x:Name="Succion_Sup" 
                                     Grid.Row="11" Grid.Column="1"
                                     Background="Transparent"
                                     Width="40"
                                     Foreground="White"
                                     FontFamily="Neo Tech Std"
                                     FontWeight="Light"
                                     HorizontalAlignment="Center"
                                     HorizontalContentAlignment="Center"
                                     VerticalAlignment="Center"
                                     BorderBrush="White"
                                     BorderThickness="0,0,0,1"/>
                            <TextBlock Text="kN/m2"
                                       Grid.Row="11" Grid.Column="2"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       FontFamily="Neo Tech Std"
                                       Foreground="White"
                                       FontWeight="Light"/>
                            <CheckBox x:Name="SuccionSup_Check"
                                      Grid.Row="11" Grid.Column="3"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Center"
                                      Foreground="{StaticResource Blue02}"/>
                            <TextBlock Text="Succión inferior:"
                                       Grid.Row="12" Grid.Column="0"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right"
                                       FontFamily="Neo Tech Std"
                                       Foreground="White"
                                       FontWeight="Light"/>
                            <TextBox x:Name="Succion_Inf" 
                                     Grid.Row="12" Grid.Column="1"
                                     Background="Transparent"
                                     Width="40"
                                     Foreground="White"
                                     FontFamily="Neo Tech Std"
                                     FontWeight="Light"
                                     HorizontalAlignment="Center"
                                     HorizontalContentAlignment="Center"
                                     VerticalAlignment="Center"
                                     BorderBrush="White"
                                     BorderThickness="0,0,0,1"/>
                            <TextBlock Text="kN/m2"
                                       Grid.Row="12" Grid.Column="2"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       FontFamily="Neo Tech Std"
                                       Foreground="White"
                                       FontWeight="Light"/>
                            <CheckBox x:Name="SuccionInf_Check"
                                      Grid.Row="12" Grid.Column="3"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Center"
                                      Foreground="{StaticResource Blue02}"/>
                            <TextBlock Text="Fuerza de fricción:"
                                       Grid.Row="13" Grid.Column="0"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right"
                                       FontFamily="Neo Tech Std"
                                       Foreground="White"
                                       FontWeight="Light"/>
                            <TextBox x:Name="Friccion" 
                                     Grid.Row="13" Grid.Column="1"
                                     Background="Transparent"
                                     Width="40"
                                     Foreground="White"
                                     FontFamily="Neo Tech Std"
                                     FontWeight="Light"
                                     HorizontalAlignment="Center"
                                     HorizontalContentAlignment="Center"
                                     VerticalAlignment="Center"
                                     BorderBrush="White"
                                     BorderThickness="0,0,0,1"/>
                            <TextBlock Text="kN/m"
                                       Grid.Row="13" Grid.Column="2"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       FontFamily="Neo Tech Std"
                                       Foreground="White"
                                       FontWeight="Light"/>
                            <CheckBox x:Name="Friccion_Check"
                                      Grid.Row="13" Grid.Column="3"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Center"
                                      Foreground="{StaticResource Blue02}"/>
                            <TextBlock Text="Presión pico, qp (viento lateral):"
                                       Grid.Row="14" Grid.Column="0"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right"
                                       FontFamily="Neo Tech Std"
                                       Foreground="White"
                                       FontWeight="Light"/>
                            <TextBox x:Name="Presion_Pico" 
                                     Grid.Row="14" Grid.Column="1"
                                     Background="Transparent"
                                     Width="40"
                                     Foreground="White"
                                     FontFamily="Neo Tech Std"
                                     FontWeight="Light"
                                     HorizontalAlignment="Center"
                                     HorizontalContentAlignment="Center"
                                     VerticalAlignment="Center"
                                     BorderBrush="White"
                                     BorderThickness="0,0,0,1"/>
                            <TextBlock Text="kN/m2"
                                       Grid.Row="14" Grid.Column="2"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       FontFamily="Neo Tech Std"
                                       Foreground="White"
                                       FontWeight="Light"/>
                            <CheckBox x:Name="PresionPico_Check"
                                      Grid.Row="14" Grid.Column="3"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Center"
                                      Foreground="{StaticResource Blue02}"/>
                            <Button x:Name="btnAsignarCargas"
                                    BorderThickness="0"
                                    Content="Asignar Cargas"
                                    Foreground="White"
                                    FontSize="14"
                                    FontFamily="Neo Tech Std"
                                    Cursor="Hand"
                                    Grid.Row="15"
                                    Grid.ColumnSpan="4"
                                    Margin="0,0,0,0"
                                    Click="btnAsignarCargas_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#08A0C3"></Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#A8D8FF"></Setter>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Width="150" 
                                                Height="30"
                                                CornerRadius="15"
                                                Background="{TemplateBinding Background}">
                                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            <Button x:Name="btnCargarDatos"
                                    BorderThickness="0"
                                    Content="Cargar desde ES_MA"
                                    Foreground="White"
                                    FontSize="13"
                                    FontFamily="Neo Tech Std"
                                    Cursor="Hand"
                                    Grid.Row="1"
                                    Grid.Column="4"
                                    Margin="0,0,0,0"
                                    Click="btnCargarDatos_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#08A0C3"></Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#A8D8FF"></Setter>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Width="125" 
                                                Height="20"
                                                CornerRadius="10"
                                                Background="{TemplateBinding Background}">
                                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            <StackPanel Grid.Row="2" Grid.Column="4"
                                        Orientation="Horizontal">
                                <RadioButton x:Name="Expuesto"
                                             Grid.Row="0"
                                             Content="Expuesta"
                                             Foreground="White"
                                             FontFamily="Neo Tech Std"
                                             FontWeight="Light"
                                             IsChecked="True"
                                             Margin="30,10,0,0"/>
                                <RadioButton x:Name="Resguardo"
                                             Content="Resguardo"
                                             Foreground="White"
                                             FontFamily="Neo Tech Std"
                                             FontWeight="Light"
                                             Margin="11,10,0,0"/>
                            </StackPanel>
                            <StackPanel Grid.Row="3" Grid.Column="4"
                                        Orientation="Horizontal">
                                <RadioButton x:Name="Configuracion_PV"
                                             Grid.Row="0"
                                             Content="PV"
                                             Foreground="White"
                                             FontFamily="Neo Tech Std"
                                             FontWeight="Light"
                                             IsChecked="True"
                                             Margin="30,10,0,0"/>
                                <RadioButton x:Name="Configuracion_PH"
                                             Content="PH"
                                             Foreground="White"
                                             FontFamily="Neo Tech Std"
                                             FontWeight="Light"
                                             Margin="47,10,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Border>
</Window>
